<div class="col-lg-6 col-md-6 col-sm-6 col-lg-offset-3 col-md-offset-3 col-sm-offset-3">
<div class="page-header">
  <h1>Login </h1>
</div>
<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-horizontal"}) do |f| %>
  <div class="form-group">
    <label for="Email" class="col-sm-2 col-md-2 col-lg-2 control-label">Email:</label>
    <div class="col-sm-10 col-md-10 col-lg-10">
      <%= f.text_field :email, autofocus: true, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <label for="Password" class="col-sm-2 col-md-2 col-lg-2 control-label">Password:</label>
    <div class="col-sm-10 col-md-10 col-lg-10"><%= f.password_field :password, autocomplete: "off", class: "form-control" %></div>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
    </div>
  <% end -%>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10"><%= f.submit "Log in", class: "btn btn-default" %></div>
  </div>
<% end %>
</div>

<%#= render "devise/shared/links" %>
