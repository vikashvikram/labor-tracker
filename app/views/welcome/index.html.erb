<% unless user_signed_in? %>
<div class="col-lg-9 col-lg-offset-1"><%= image_tag('image.jpg') %><div>
<div class="jumbotron">
  <h1>Labor Tracker</h1>
  <p>Welcome to the new age Labor Tracking system.</p>
  <p><%=link_to "Login", new_user_session_path, class:  "btn btn-default btn-lg"%></p>
</div>
<%else%>
<div class="page-header">
  <h2>Welcome <%= current_user.name%></h2>
</div>
<div class="row">
	<div class="col-lg-3 col-md-3 col-sm-3">
		<div class="thumbnail" style="border: none">
			<%= image_tag "#{current_user.name.split(' ').join.downcase}.png" %>
			<div class="caption">
				<p><b> Name: </b> <%= current_user.name%></p>
				<p><b> Date of Birth: </b> <%= current_user.dob.strftime('%B %d, %Y')%></p>
				<p><b> Hospital: </b> <%= current_user.hospital%></p>
			</div>
		</div>
	</div>
	<div class="col-lg-9 col-md-9 col-sm-9">
		<div class="panel panel-default">
			<div class="panel-heading">
				<h3 class="panel-title">Patients</h3>
			 </div>
  			<div class="panel-body">
    			<%@patients.each do |patient| %>
				<div class="col-lg-4 col-md-6 col-sm-6">
					<div class="thumbnail">
						<%=link_to image_tag("#{patient.name.downcase}.png", style:"height: 200px"),  patient%>
						<div class="caption">
							<p><b> Name: </b> <em><%= patient.name%></em></p>
							<p><b> Place: </b> <%= "#{patient.district}, #{patient.state}"%></p>
						</div>
					</div>
				</div>
				<%end%>
  			</div>
		</div>
	</div>
</div>
<%end%>
